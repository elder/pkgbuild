# Maintainer:  Elder Marco <eldermarco at gmail dot com>

pkgname=gnome-shell-theme-elementary
pkgver=1.1
pkgrel=2
pkgdesc="The Elementary gnome-shell theme"
url="http://half-left.deviantart.com/art/GNOME-Shell-Elementary-251536124"
license=('GPL3' 'LGPL2.1')
arch=('any')
depends=('gnome-shell')
optdepends=('gnome-shell-extension-user-theme: User Theme extension for GNOME Shell'
    'gnome-tweak-tool: A tool to customize advanced GNOME 3 options')
source=('http://www.deviantart.com/download/251536124/gnome_shell___elementary_by_half_left-d45raik.zip'
    'gnome-shell-theme-elementary-1.1-fix-version.patch')
md5sums=('67f3053df73c81b5f3c0c0211fa33a45'
    '27a572031daca62806fcf16daa0ef1a8')

package() {
    cd "$srcdir/Elementary"
    patch -p1 < ../$pkgname-$pkgver-fix-version.patch

    # The theme
    mkdir -p "$pkgdir/usr/share/themes/Elementary/gnome-shell"
    install -Dp -m0644 gnome-shell/* \
        "$pkgdir/usr/share/themes/Elementary/gnome-shell"

    # Remove backup files
    find "$pkgdir" -name *~ -type f -exec rm -f '{}' \;
}
# expandtab:tabstop=4:shiftwidth=4
